<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

     <!-- Button Bar -->

    <!-- Content Hub fragment container -->
    <ToggleButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ContenHub"
            android:id="@+id/fragment_container_toggle" android:textOn="ContentHub" android:textOff="Embedded Webview"
            android:layout_alignParentTop="true"/>
    <RelativeLayout
	    android:id="@+id/fragment_container"
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
        android:gravity="fill_horizontal|fill_vertical"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/fragment_container_toggle"
        android:layout_above="@+id/button_container"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dip" android:id="@+id/button_container"
            android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
               android:id="@+id/btn_close"
               android:layout_width="wrap_content"
               android:layout_height="45dip"
               android:background="?android:attr/selectableItemBackground"
               android:text="@string/button_text_close" android:layout_gravity="right"
               android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"/>
            <Button
               android:id="@+id/btn_back"
               android:layout_width="wrap_content"
               android:layout_height="45dip"
               android:background="?android:attr/selectableItemBackground"
               android:text="@string/button_text_back" android:layout_gravity="left" android:layout_alignParentBottom="true"
               android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
