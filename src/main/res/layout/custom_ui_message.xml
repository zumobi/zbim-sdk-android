<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_user_message_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal">

    <TextView
        android:id="@+id/custom_usermessage_text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/usermessage_text_message"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:typeface="sans"
        android:shadowColor="#BF000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="5"/>
    <ProgressBar
        style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
        android:id="@+id/custom_usermessage_progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_usermessage_text_message"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:max="100"/>

</RelativeLayout>